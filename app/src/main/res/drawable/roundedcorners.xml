    <!-- shape property for the view based on the value particular view would be drawn -->
    <corners
        android:radius="25dp" />
    <stroke android:width="2dp"
        android:color="@color/black" />

    <!--  stroke for defining a border for view -->
    <solid
        android:color="@color/white_A700"
        >

    </solid>


    <size
